<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/purchase_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView
        android:id="@+id/purchase_banner_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_banner_ad"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Play Purchases"
        android:textColor="#FFFFFFFF"
        android:textSize="40sp"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/main_menu_title"
        android:layout_gravity="center_horizontal"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/purchase_remove_ads"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="UNK"
            android:textSize="30sp"
            android:textColor="#FFFFFFFF"
            android:background="@drawable/main_menu_button"
            android:textAlignment="center"
            android:onClick="on_button_click_remove_ads"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove all Ads"
            android:textSize="30sp"
            android:gravity="center"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/purchase_coins_250"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="UNK"
            android:textSize="30sp"
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:background="@drawable/main_menu_button"
            android:onClick="on_button_click_coins_250"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250 Coins"
            android:textSize="30sp"
            android:gravity="center"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/purchase_coins_500"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="UNK"
            android:textSize="30sp"
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:background="@drawable/main_menu_button"
            android:onClick="on_button_click_coins_500"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 Coins"
            android:textSize="30sp"
            android:gravity="center"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/purchase_coins_1000"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="UNK"
            android:textSize="30sp"
            android:textColor="#FFFFFFFF"
            android:textAlignment="center"
            android:background="@drawable/main_menu_button"
            android:onClick="on_button_click_coins_1000"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 Coins"
            android:textSize="30sp"
            android:gravity="center"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20sp" />

    <TextView
        android:id="@+id/purchase_current_coins"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="  XXX Current Coins"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/upgrades_coin"/>

</LinearLayout>